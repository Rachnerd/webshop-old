{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "src",
    "paths": {
      "@webshop/atoms": ["components/atoms"],
      "@webshop/molecules": ["components/molecules"],
      "@webshop/organisms": ["components/organisms"],
      "@webshop/templates": ["components/templates"],
      "@webshop/pages": ["components/pages"],
      "@webshop/models": ["models"],
      "@webshop/utils": ["utils"],
      "@webshop/config": ["config"],
      "@webshop/requests": ["requests"],
      "@webshop/data": ["data"],
      "@webshop/graphql": ["../.generated"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
